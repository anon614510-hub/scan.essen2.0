generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id        String       @id
  email     String       @unique
  createdAt DateTime     @default(now())
  profile   UserProfile?
  recipes   Recipe[]
  ingredients Ingredient[]
}

model UserProfile {
  id                String   @id @default(cuid())
  userId            String   @unique
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  healthConditions  String[]
  dietaryApproach   String
  goals             String[]
  cookingTime       String
  cookingConfidence String
  allergies         String[]
  age               Int?
  sex               String?
  customDislikes    String?
  state             String?
  preferredLanguage String?
  updatedAt         DateTime @updatedAt
}

model Recipe {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  title       String
  cookingTime Int?
  calories    Int?
  healthScore Int?
  content     Json
  createdAt   DateTime @default(now())

  @@index([userId])
}

model Ingredient {
  id           String   @id @default(cuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  name         String
  quantity     String?
  expiryStatus String?
  createdAt    DateTime @default(now())

  @@index([userId])
}
